   	<!-- 함승구 : ERROR PAGES: START -->
	<error-page>
	  <exception-type>java.lang.Throwable</exception-type>
	  <location>/_about/_errorThrowable</location>
	</error-page>
	<error-page>
	  <exception-type>java.lang.Exception</exception-type>
	  <location>/_about/_errorException</location>
	</error-page>
	<error-page>
	  <error-code>400</error-code>
	  <location>/_about/_error400</location>
	</error-page>
	<error-page>
	  <error-code>403</error-code>
	  <location>/_about/_error403</location>
	</error-page>
	<error-page>
	  <error-code>404</error-code>
	  <location>/_about/_error404</location>
	</error-page>
	<error-page>
	  <error-code>405</error-code>
	  <location>/_about/_error405</location>
	</error-page>
	<error-page>
	  <error-code>500</error-code>
	  <location>/_about/_error500</location>
	</error-page>
	<error-page>
	  <error-code>503</error-code>
	  <location>/_about/_error503</location>
	</error-page>
	<!-- ERROR PAGES: END --> 
    
</web-app>
